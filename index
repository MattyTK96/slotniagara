    </footer>

    <script>
        // Mobile Menu Toggle
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const mobileMenuClose = document.querySelector('.mobile-menu-close');
        const mobileMenu = document.querySelector('.mobile-menu');
        
        mobileMenuBtn.addEventListener('click', () => {
            mobileMenu.classList.add('active');
            document.body.style.overflow = 'hidden';
        });
        
        mobileMenuClose.addEventListener('click', () => {
            mobileMenu.classList.remove('active');
            document.body.style.overflow = 'auto';
        });
        
        // Smooth Scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    window.scrollTo({
                        top: target.offsetTop - 80,
                        behavior: 'smooth'
                    });
                    
                    // Close mobile menu if open
                    mobileMenu.classList.remove('active');
                    document.body.style.overflow = 'auto';
                }
            });
        });
        
        // Header Scroll Effect
        window.addEventListener('scroll', () => {
            const header = document.querySelector('header');
            if (window.scrollY > 100) {
                header.classList.add('header-scrolled');
            } else {
                header.classList.remove('header-scrolled');
            }
        });
        
        // Form Submission
        const contactForm = document.getElementById('contactForm');
        const formSuccess = document.getElementById('formspreeSuccess');
        const formError = document.getElementById('formspreeError');
        
        if (contactForm) {
            contactForm.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                // Ocultar mensajes anteriores
                formSuccess.style.display = 'none';
                formError.style.display = 'none';
                
                try {
                    const response = await fetch(contactForm.action, {
                        method: 'POST',
                        body: new FormData(contactForm),
                        headers: {
                            'Accept': 'application/json'
                        }
                    });
                    
                    if (response.ok) {
                        // Mostrar mensaje de éxito
                        formSuccess.style.display = 'block';
                        contactForm.reset();
                        
                        // Ocultar mensaje después de 5 segundos
                        setTimeout(() => {
                            formSuccess.style.display = 'none';
                        }, 5000);
                    } else {
                        throw new Error('Error al enviar el formulario');
                    }
                } catch (error) {
                    // Mostrar mensaje de error
                    formError.style.display = 'block';
                    console.error(error);
                    
                    // Ocultar mensaje después de 5 segundos
                    setTimeout(() => {
                        formError.style.display = 'none';
                    }, 5000);
                }
            });
        }
        
        // Gallery Lightbox (simplified)
        const galleryItems = document.querySelectorAll('.gallery-item');
        galleryItems.forEach(item => {
            item.addEventListener('click', () => {
                alert('En una implementación completa, aquí se abriría un lightbox con la imagen ampliada.');
            });
        });
        
        // Active Navigation Link
        window.addEventListener('scroll', () => {
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('nav ul li a, .mobile-nav ul li a');
            
            let current = '';
            
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                const sectionHeight = section.clientHeight;
                
                if (pageYOffset >= (sectionTop - 100)) {
                    current = section.getAttribute('id');
                }
            });
            
            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === `#${current}`) {
                    link.classList.add('active');
                }
            });
        });
        
        // Performance optimizations
        document.addEventListener('DOMContentLoaded', function() {
            // Apply performance optimizations to elements
            document.querySelectorAll('.optimized').forEach(el => {
                el.style.backfaceVisibility = 'hidden';
                el.style.transform = 'translateZ(0)';
                el.style.willChange = 'transform';
            });
        });
        
        // Times Online Modal Functionality
        const timesButton = document.getElementById('timesButton');
        const timesModal = document.getElementById('timesModal');
        const closeModal = document.getElementById('closeModal');
        const circuitTableBody = document.getElementById('circuitTableBody');
        const raidTableBody = document.getElementById('raidTableBody');
        const searchInput = document.getElementById('searchInput');
        const tabButtons = document.querySelectorAll('.tab-button');
        const eventName = document.getElementById('eventName');

        // Sample data for times table
        const circuitData = [
            { position: 1, pilot: "Carlos Sainz", team: "Toyota Gazoo Racing", group: "A", time: "3:45:12.345" },
            { position: 2, pilot: "Sébastien Loeb", team: "Bahrain Raid Xtreme", group: "A", time: "3:47:23.456" },
