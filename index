            { position: 8, pilot: "Giniel de Villiers", team: "Toyota Gazoo Racing", group: "T3", stages: "9/12" },
            { position: 9, pilot: "Kuba Przygoński", team: "Orlen Team", group: "T3", stages: "9/12" },
            { position: 10, pilot: "Martin Prokop", team: "Orlen Benzina Team", group: "T1", stages: "8/12" }
        ];
        
        // Function to populate the tables
        function populateTables() {
            circuitTableBody.innerHTML = '';
            raidTableBody.innerHTML = '';
            
            circuitData.forEach(item => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="position">${item.position}</td>
                    <td><span class="pilot-name">${item.pilot}</span></td>
                    <td><span class="team-name">${item.team}</span></td>
                    <td>${item.group}</td>
                    <td>${item.time}</td>
                `;
                circuitTableBody.appendChild(row);
            });
            
            raidData.forEach(item => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="position">${item.position}</td>
                    <td><span class="pilot-name">${item.pilot}</span></td>
                    <td><span class="team-name">${item.team}</span></td>
                    <td>${item.group}</td>
                    <td>${item.stages}</td>
                `;
                raidTableBody.appendChild(row);
            });
        }
        
        // Function to filter tables
        function filterTables(searchTerm) {
            // Filter Circuit Table
            circuitTableBody.innerHTML = '';
            const filteredCircuit = circuitData.filter(item => 
                item.pilot.toLowerCase().includes(searchTerm.toLowerCase()) || 
                item.team.toLowerCase().includes(searchTerm.toLowerCase()) ||
                item.group.toLowerCase().includes(searchTerm.toLowerCase())
            );
            
            filteredCircuit.forEach(item => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="position">${item.position}</td>
                    <td><span class="pilot-name">${item.pilot}</span></td>
                    <td><span class="team-name">${item.team}</span></td>
                    <td>${item.group}</td>
                    <td>${item.time}</td>
                `;
                circuitTableBody.appendChild(row);
            });
            
            // Filter Raid Table
            raidTableBody.innerHTML = '';
            const filteredRaid = raidData.filter(item => 
                item.pilot.toLowerCase().includes(searchTerm.toLowerCase()) || 
                item.team.toLowerCase().includes(searchTerm.toLowerCase()) ||
                item.group.toLowerCase().includes(searchTerm.toLowerCase())
            );
            
            filteredRaid.forEach(item => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="position">${item.position}</td>
                    <td><span class="pilot-name">${item.pilot}</span></td>
                    <td><span class="team-name">${item.team}</span></td>
                    <td>${item.group}</td>
                    <td>${item.stages}</td>
                `;
                raidTableBody.appendChild(row);
            });
        }
        
        // Tab switching functionality
        tabButtons.forEach(button => {
            button.addEventListener('click', () => {
                // Remove active class from all buttons
                tabButtons.forEach(btn => btn.classList.remove('active'));
                
                // Add active class to clicked button
                button.classList.add('active');
                
                // Hide all tab contents
                document.querySelectorAll('.tab-content').forEach(tab => {
                    tab.classList.remove('active');
                });
                
                // Show corresponding tab content
                const tabId = button.getAttribute('data-tab');
                document.getElementById(`${tabId}-tab`).classList.add('active');
            });
        });
        
        // Event listeners for modal
        timesButton.addEventListener('click', () => {
            timesModal.classList.add('active');
            document.body.style.overflow = 'hidden';
            populateTables();
        });
        
        closeModal.addEventListener('click', () => {
            timesModal.classList.remove('active');
            document.body.style.overflow = 'auto';
        });
        
        // Close modal when clicking outside of it
        timesModal.addEventListener('click', (e) => {
            if (e.target === timesModal) {
                timesModal.classList.remove('active');
                document.body.style.overflow = 'auto';
            }
        });
        
        // Search functionality
        searchInput.addEventListener('input', () => {
            filterTables(searchInput.value);
        });
        
        // Initialize tables
        populateTables();
        
        // Shop Functionality
        const shopModal = document.getElementById('shopModal');
        const closeShopModal = document.getElementById('closeShopModal');
        const shopLink = document.getElementById('shopLink');
        const mobileShopLink = document.getElementById('mobileShopLink');
        const productsContainer = document.getElementById('productsContainer');
        const shopSearch = document.getElementById('shopSearch');
        const categoryButtons = document.querySelectorAll('.category-btn');
        
        // Sample products data
        const products = [
            {
                id: 1,
                name: "Calcas Liqui Moly",
                description: "Escala 1/24.",
                price: "6",
                category: "Calcas",
                image: "../001.jpg",
                badge: "Nuevo"
            },
