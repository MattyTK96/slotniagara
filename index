        ];
        
        const raidData = [
            { position: 1, pilot: "Carlos Sainz", team: "Toyota Gazoo Racing", group: "T1", stages: "12/12" },
            { position: 2, pilot: "Sébastien Loeb", team: "Bahrain Raid Xtreme", group: "T1", stages: "12/12" },
            { position: 3, pilot: "Nasser Al-Attiyah", team: "Red Bull Off-Road", group: "T1", stages: "11/12" },
